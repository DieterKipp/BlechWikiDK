<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/fundstellen_2_Titel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Titel"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fundstellen_2_divider2" />


    <TextView
        android:id="@+id/fundstellen_2_Nr"
        android:layout_width="40dp"
        android:layout_height="18dp"
        android:text="Nr"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fundstellen_2_Buch" />

    <TextView
        android:id="@+id/fundstellen_2_Buch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Buch"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/fundstellen_2_Nr"
        app:layout_constraintStart_toStartOf="@+id/fundstellen_Komponist_divider"
        app:layout_constraintTop_toBottomOf="@+id/fundstellen_Komponist_divider" />

    <View
        android:id="@+id/fundstellen_2_divider2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fundstellen_Komponist_Besetzung"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:text="Besetzung"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/fundstellen_2_Buch"
        app:layout_constraintTop_toBottomOf="@+id/fundstellen_2_Buch" />

    <TextView
        android:id="@+id/fundstellen_Komponist_Vorzeichen"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Vorzeichen"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/fundstellen_Komponist_Besetzung"
        app:layout_constraintTop_toBottomOf="@+id/fundstellen_2_Buch" />

    <TextView
        android:id="@+id/fundstellen_Komponist_Titel2"
        android:layout_width="271dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Titel2"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/fundstellen_Komponist_Vorzeichen"
        app:layout_constraintTop_toBottomOf="@+id/fundstellen_2_Buch" />

    <View
        android:id="@+id/fundstellen_Komponist_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fundstellen_2_Titel" />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/komponistrow2headlinegroup"
        tools:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="fundstellen_2_divider2,fundstellen_2_Titel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>