<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fundstellen_3_Titel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/colorTextBackground"
        android:text="Titel"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fundstellen_3_Nr"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fundstellen_3_Nr"
        android:layout_width="40dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:text="Nr"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/fundstellen_3_Komponist"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Komponist"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/fundstellen_3_Titel"
        app:layout_constraintTop_toBottomOf="@+id/fundstellen_3_Titel" />

    <TextView
        android:id="@+id/fundstellen_3_Vorzeichen"
        android:layout_width="50dp"
        android:layout_height="22dp"
        android:text="Vorzeichen"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/fundstellen_3_Besetzung"
        app:layout_constraintTop_toTopOf="@+id/fundstellen_3_Komponist" />

    <TextView
        android:id="@+id/fundstellen_3_Besetzung"
        android:layout_width="84dp"
        android:layout_height="22dp"
        android:text="Besetzung"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/fundstellen_3_Komponist"
        app:layout_constraintTop_toTopOf="@+id/fundstellen_3_Komponist" />

    <View
        android:layout_width="409dp"
        android:layout_height="2dp"
        android:background="@color/colorTextBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>