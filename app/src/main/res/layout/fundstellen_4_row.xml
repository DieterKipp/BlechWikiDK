<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/fundstellen_4_Titel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Titel"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fundstellen_4_divider2" />


    <View
        android:id="@+id/fundstellen_4_divider2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/fundstellen_4_Komponist"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Komponist"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/fundstellen_4_divider"
        app:layout_constraintTop_toBottomOf="@+id/fundstellen_4_divider" />

    <TextView
        android:id="@+id/fundstellen_4_Titel2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Titel2"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/fundstellen_4_Nr"
        app:layout_constraintStart_toEndOf="@+id/fundstellen_4_Komponist"
        app:layout_constraintTop_toBottomOf="@+id/fundstellen_4_divider" />

    <TextView
        android:id="@+id/fundstellen_4_Nr"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="Nr"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fundstellen_4_Titel2" />

    <TextView
        android:id="@+id/fundstellen_4_Besetzung"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="Besetzung"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/fundstellen_4_Komponist"
        app:layout_constraintTop_toBottomOf="@+id/fundstellen_4_Komponist" />

    <TextView
        android:id="@+id/fundstellen_4_Vorzeichen"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:text="Vorzeichen"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/fundstellen_4_Besetzung"
        app:layout_constraintTop_toBottomOf="@+id/fundstellen_4_Komponist" />

    <View
        android:id="@+id/fundstellen_4_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fundstellen_4_Titel" />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/komponistrow_4_headlinegroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="fundstellen_4_divider2,fundstellen_4_Titel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>